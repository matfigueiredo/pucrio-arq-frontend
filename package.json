{
  "name": "tech4bike-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "docker:up": "docker-compose up -d",
    "docker:build": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:frontend": "docker-compose logs -f frontend",
    "docker:logs:backend": "docker-compose logs -f backend",
    "docker:rebuild": "docker-compose down && docker-compose up --build",
    "docker:rebuild:frontend": "docker-compose stop frontend && docker-compose build frontend && docker-compose up -d frontend",
    "docker:rebuild:backend": "docker-compose stop backend && docker-compose build backend && docker-compose up -d backend",
    "docker:clean": "docker-compose down -v",
    "docker:clean:all": "docker-compose down -v && docker system prune -f",
    "docker:ps": "docker-compose ps"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.6",
    "axios": "^1.7.0",
    "recharts": "^2.12.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "@biomejs/biome": "2.2.0"
  }
}
